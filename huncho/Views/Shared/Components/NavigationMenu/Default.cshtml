@model IEnumerable<string>
<a class="btn btn-block btn-secondary"
   asp-action="Index"
   asp-controller="Product"
   asp-route-category="">
    Home
</a>

@foreach (string category in Model)
{
    var categoryClass = category == ViewBag.SelectedCategory ? "btn-primary" : "btn-secondary";
    <a class="btn btn-block
        @(categoryClass)"
        asp-action="Index"
        asp-controller="Product"
        asp-route-category="@category"
        asp-route-page="1">
        @category
    </a>
}